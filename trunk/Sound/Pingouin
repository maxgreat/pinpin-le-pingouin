import Interface.*;
import Arbitre.*;
import Joueurs.*;
import Sound.*;

class Pingouin
{
    public static void main(String [] args)
    {
        // Ajoute un hook pour fermer proprement si Ctrl+C la partie
        Runtime.getRuntime().addShutdownHook(new Thread() 
            {
                public void run() 
                {
                    ArbitreManager.stopperPartie();
                }
            });

        Thread music;
        Comportement c;

		  d = new Donnees();
        c = new Comportement("/home/julien/pinpin-le-pingouin/Sound/piste1.mp3",d);
        music = new Thread(c);
        music.start();	

        // CrÃ©ation de l'interface via la fabrique (Si au moins un argument on lance la console)
        Interface inter = InterfaceFabrique.createInterface(args.length > 0);

        // Lance l'interface
        inter.run(args);
    }
}
